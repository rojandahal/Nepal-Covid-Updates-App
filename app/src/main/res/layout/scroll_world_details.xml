<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="8dp"
    android:paddingEnd="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/testDone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/global_layout_color"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_white_case"
                android:orientation="vertical"
                android:paddingStart="2dp"
                android:paddingEnd="2dp">

                <TextView
                    android:id="@+id/textView_testsDone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:fontFamily="@font/open_sans_semibold_italic"
                    android:shadowColor="@color/pink"
                    android:shadowRadius="5"
                    android:text="@string/tests_done"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/world_testsDone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/bold2"
                    android:text="@string/_1111111111111"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/affectedCountries"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/testDone"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/global_layout_color"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_white_case"
                android:orientation="vertical"
                android:paddingStart="2dp"
                android:paddingEnd="2dp">

                <TextView
                    android:id="@+id/textView_affectedCountries"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:fontFamily="@font/open_sans_semibold_italic"
                    android:shadowColor="@color/pink"
                    android:shadowRadius="5"
                    android:text="@string/affected_countries"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/world_affectedCountries"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/bold2"
                    android:text="@string/_1111111111111"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/affectedCountries"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/global_layout_color2"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:orientation="vertical"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp">

                    <TextView
                        android:id="@+id/textView_cases"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:fontFamily="@font/open_sans_semibold_italic"
                        android:shadowColor="@android:color/black"
                        android:shadowRadius="10"
                        android:text="@string/cases"
                        android:textAlignment="center"
                        android:textColor="@color/yellow"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/world_cases_number"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/bold2"
                        android:text="@string/_25644296"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/global_layout_color2"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:orientation="vertical"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp">

                    <TextView
                        android:id="@+id/textView_active"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:fontFamily="@font/open_sans_semibold_italic"
                        android:shadowColor="@android:color/black"
                        android:shadowRadius="10"
                        android:text="@string/active"
                        android:textAlignment="center"
                        android:textColor="@color/greeen"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/world_active_number"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/bold2"
                        android:text="@string/_17945066"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="18sp" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear1"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/global_layout_color2"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:orientation="vertical"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp">

                    <TextView
                        android:id="@+id/textView_recovred"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:fontFamily="@font/open_sans_semibold_italic"
                        android:shadowColor="@android:color/black"
                        android:shadowRadius="10"
                        android:text="@string/recovered"
                        android:textAlignment="center"
                        android:textColor="@color/greeen"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/world_recovered_number"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/bold2"
                        android:text="@string/_17945066"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/global_layout_color2"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:orientation="vertical"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp">

                    <TextView
                        android:id="@+id/textView_deaths"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:fontFamily="@font/open_sans_semibold_italic"
                        android:shadowColor="@android:color/black"
                        android:shadowRadius="10"
                        android:text="@string/deaths"
                        android:textAlignment="center"
                        android:textColor="@color/red"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/world_deaths_number"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/bold2"
                        android:text="@string/_854861"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/todayCases"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear2"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/global_layout_color2"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="8dp"
                android:paddingEnd="8dp">

                <TextView
                    android:id="@+id/textView_todayCases"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:shadowColor="@android:color/black"
                    android:shadowRadius="10"
                    android:textSize="22sp"
                    android:text="Today Cases"
                    android:textAlignment="center"
                    android:textColor="@color/yellow"
                    android:textStyle="bold"
                    android:fontFamily="@font/open_sans_semibold_italic"/>

                <TextView
                    android:id="@+id/world_todayCases_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/bold2"
                    android:text="@string/_17945066"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/todayRecovered"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/global_layout_color2"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="12dp"
            android:layout_below="@+id/todayCases"
            app:cardElevation="4dp"
            android:focusable="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_todayRecovered"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="22sp"
                    android:text="Today Recovered"
                    android:shadowColor="@android:color/black"
                    android:shadowRadius="10"
                    android:textColor="@color/greeen"
                    android:textStyle="bold"
                    android:fontFamily="@font/open_sans_semibold_italic"/>

                <TextView
                    android:id="@+id/world_todayRecovered_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:layout_marginTop="8dp"
                    android:textSize="18sp"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/bold2"
                    android:textColor="@color/white"
                    android:text="@string/_17945066" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/todayDeaths"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/global_layout_color2"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="12dp"
            android:layout_below="@+id/todayRecovered"
            app:cardElevation="4dp"
            android:focusable="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_todayDeaths"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="22sp"
                    android:text="Today Deaths"
                    android:shadowColor="@android:color/black"
                    android:shadowRadius="5"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    android:fontFamily="@font/open_sans_semibold_italic"/>

                <TextView
                    android:id="@+id/world_todayDeaths_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:layout_marginTop="8dp"
                    android:textSize="18sp"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/bold2"
                    android:textColor="@color/white"
                    android:text="@string/_17945066" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/criticalCase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/global_layout_color2"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="12dp"
            android:layout_below="@+id/todayDeaths"
            app:cardElevation="4dp"
            android:focusable="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_critical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="22sp"
                    android:text="Critical Cases"
                    android:shadowColor="@android:color/black"
                    android:shadowRadius="5"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    android:fontFamily="@font/open_sans_semibold_italic"/>

                <TextView
                    android:id="@+id/world_critical_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:layout_marginTop="8dp"
                    android:textSize="18sp"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/bold2"
                    android:textColor="@color/white"
                    android:text="@string/_17945066" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>


</merge>